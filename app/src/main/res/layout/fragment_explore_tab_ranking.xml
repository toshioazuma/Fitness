<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.onrushers.app.explore.tabs.ranking.ExploreTabRankingFragment">

    <ListView
        android:id="@+id/explore_rank_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:divider="@color/lightGraySecondary"
        android:dividerHeight="0.5dp"/>

    <TextView
        android:id="@+id/explore_rank_coming_soon_textview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/default_double_space"
        android:text="@string/explore.ranking.coming_soon"
        android:visibility="gone"/>

</RelativeLayout>
