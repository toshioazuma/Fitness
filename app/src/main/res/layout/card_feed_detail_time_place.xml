<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:id="@+id/card_feed_detail_time_place_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="left"
        android:orientation="horizontal"
        android:padding="@dimen/default_space">

        <TextView
            android:id="@+id/card_feed_detail_time_textview"
            fontPath="fonts/EurostileRegular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_sm_clock"
            android:drawablePadding="@dimen/default_half_space"
            android:ellipsize="end"
            android:paddingRight="@dimen/default_half_space"
            android:singleLine="true"
            android:textColor="@color/lightGray"/>

        <TextView
            android:id="@+id/card_feed_detail_place_textview"
            fontPath="fonts/EurostileRegular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_sm_place"
            android:drawablePadding="@dimen/default_half_space"
            android:ellipsize="end"
            android:paddingLeft="@dimen/default_half_space"
            android:singleLine="true"
            android:textColor="@color/lightGray"/>

    </LinearLayout>

</android.support.v7.widget.CardView>