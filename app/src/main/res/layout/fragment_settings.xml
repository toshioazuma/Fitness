<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.onrushers.app.settings.SettingsFragment">

    <include layout="@layout/layout_stub_header_primary"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ultraLightGray"
            android:orientation="vertical">

            <TextView
                android:id="@+id/settings_edit_account_row"
                style="@style/Settings.Row.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_setting_edit_account"
                android:text="@string/settings.edit_my_account"/>

            <TextView
                android:id="@+id/settings_social_networks_row"
                style="@style/Settings.Row.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_setting_social"
                android:text="@string/settings.social_networks"/>

            <TextView
                android:id="@+id/settings_play_tutorial_row"
                style="@style/Settings.Row.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_setting_play_presentation"
                android:text="@string/settings.replay_presentation"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/settings_support_row"
                style="@style/Settings.Row.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_setting_support"
                android:text="@string/settings.support"/>

            <TextView
                android:id="@+id/settings_website_row"
                style="@style/Settings.Row.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_setting_website"
                android:text="@string/settings.website"/>

            <TextView
                android:id="@+id/settings_delete_account_row"
                style="@style/Settings.Row.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_delete_red"
                android:drawableRight="@null"
                android:text="@string/settings.delete_my_account"
                android:textColor="@color/red"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
