<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    tools:ignore="MissingPrefix">

    <com.onrushers.common.widgets.ORSquareImageView
        android:id="@+id/card_feed_detail_picture_imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ultraLightGray"
        android:transitionName="@string/transitions.picture_square_to_feed_detail"/>

</android.support.v7.widget.CardView>